{
    "name": "spotify-url-to-playlist",
    "description": "browser extension made in javascript that allows the user to add a track to a given Spotify playlist by right clicking a Spotify track url",
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "./background.js"
        ],
        "persistent": true
    },
    "options_ui": {
        "page": "options/login.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "permissions": [
        "contextMenus",
        "storage",
        "identity"
    ],
    "web_accessible_resources": [
      "icons/*.png"
    ]
}